{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ]
  },
  "OpenTelemetry": {
    "ServiceName": "RuleForge.Api",
    "OtlpEndpoint": "http://localhost:4317"
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=ruleforge;Username=ruleforge;Password=CHANGE_ME;Include Error Detail=true"
  },
  "Jwt": {
    "Key": "RuleForge-Default-Secret-Key-Min-32-Chars!!",
    "Issuer": "RuleForge",
    "Audience": "RuleForge-Api"
  }
}
